<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ./partials/head %>
  </head>

  <body class="bg-light">
    <% include ./partials/navbar %>
    <div class="container-fluid">
    <div class="row mt-4">
      <div class="col-4">
        <div class="card">
          <div class="card-body">
            <h3 class="card-title">@<%=current.username %></h3>
          </div>
        </div>

        <h1 class="mt-5">@<%= current.username %> Post History</h1>

        <div class="card border-primary">

          <% for(var i=0; i < posts.length;i++){ %>
          <div class="card-body text-dark border-top">
            <h5 class="card-title"> <%=posts[i].post_title %> </h5>
            <form>
              <div class="row">

                <div class="col-6">
                  <button type="button" name="post1" class="btn btn-info btn-sm">Post Information</button>
                </div>
                <div class="col-6">
                  <p class="small"> <strong>Post Created: <em><%=posts[i].time_created%></em></strong> </p>
                </div>
              </div>
            </form>
          </div>

          <% } %>
        </div>

      </div>
      <div class="col-8">

            <table class="table table-bordered bg-white">
              <th colspan="2" class="text-center"> MESSAGES</th>
                <tr>
                  <th>Username</th>
                  <th>Message</th>
                </tr>
            </table>
            <% for(var i = 0; i < allUsers.length; i++){ %>
            <table class="table table-bordered bg-white">
              <% for(var message in messages) { %>
                <% if (messages[message].from_user == allUsers[i] && messages[message].from_user != current.user_id) { %>
              <tr>
                <td><%= userInfo[messages[message].from_user-1].username%>:</td>
                <td><%=messages[message].message_body%> </td>
              </tr>
              <% }else if(messages[message].from_user==current.user_id && messages[message].to_user == allUsers[i]){%>
                <tr>

                  <td>YOU:</td>
                  <td><%=messages[message].message_body%> </td>
                </tr>
                <%}%>
              <% } %>
              <% if( allUsers[i] != current.user_id ) { %>
              <textarea name="name" rows="8" cols="80">Text</textarea>
              <button type="button" name="button">Reply</button>
              <% } %>
            </table>

            <%}%>
        </div>

      </div>



  </div>
  </body>
</html>
